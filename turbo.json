{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build:dist": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"],
      "env": [
        "VITE_APP_BASE_API", 
        "VITE_PUBLIC_PATH", 
        "NODE_ENV"
      ]
    },
    "lint": {
      "outputs": []
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
